#ifndef LCD_CNFG_H_
#define LCD_CNFG_H_


#define  LCD_NUM             1



typedef struct
{

	u8   LCD_u8Mode         ;


	u8   LCD_u8RS_Port      ;
	u8   LCD_u8RS_Pin       ;

	u8   LCD_u8RW_Port      ;
	u8   LCD_u8RW_Pin       ;

	u8   LCD_u8EN_Port      ;
	u8   LCD_u8EN_Pin       ;


	u8   LCD_u8D7_Port      ;
	u8   LCD_u8D7_Pin       ;

	u8   LCD_u8D6_Port      ;
	u8   LCD_u8D6_Pin       ;

	u8   LCD_u8D5_Port      ;
	u8   LCD_u8D5_Pin       ;

	u8   LCD_u8D4_Port      ;
	u8   LCD_u8D4_Pin       ;

	u8   LCD_u8D3_Port      ;
	u8   LCD_u8D3_Pin       ;


	u8   LCD_u8D2_Port      ;
	u8   LCD_u8D2_Pin       ;


	u8   LCD_u8D1_Port      ;
	u8   LCD_u8D1_Pin       ;


	u8   LCD_u8D0_Port      ;
	u8   LCD_u8D0_Pin       ;


}LCD_t;

 extern LCD_t LCD_AstrLcdCnfg[LCD_NUM];





#endif /* LCD_CNFG_H_ */
